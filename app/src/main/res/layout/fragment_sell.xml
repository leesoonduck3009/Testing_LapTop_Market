<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.SellFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F5BD40">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Quản lý đơn bán"/>
        </androidx.appcompat.widget.Toolbar>
        <GridLayout
            android:visibility="gone"
            android:id="@+id/gridRequireLoginForBuy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vui lòng đăng nhập để thực hiện chức năng này"
                    android:textSize="16dp"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_marginTop="5dp"
                    android:layout_width="200dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Đăng nhập/ Đăng ký"
                    android:textColor="@color/white"
                    android:backgroundTint="#F09D38"/>
            </LinearLayout>
        </GridLayout>
        <LinearLayout
            android:visibility="visible"
            android:id="@+id/layoutLoginedForSell"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F5F5F5">
            <com.google.android.material.bottomnavigation.BottomNavigationView
                app:elevation="0dp"
                android:id="@+id/navSell"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/white_shape_bottom_border"
                android:paddingBottom="5dp"
                android:elevation="0dp"
                app:itemIconTint="@drawable/bottom_navigation_colors"
                app:itemTextColor="@drawable/bottom_navigation_colors"
                app:itemTextAppearanceActive="@style/SellNavigationTextAppearance"
                app:itemTextAppearanceInactive="@style/SellNavigationTextAppearance"
                app:menu="@menu/sell_menu"
                app:labelVisibilityMode="labeled"/>
            <androidx.viewpager2.widget.ViewPager2
                android:layout_marginTop="-10dp"
                android:id="@+id/viewPagerSell"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>