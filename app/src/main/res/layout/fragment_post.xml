<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.PostFragment"
    android:id="@+id/framePost">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F5BD40">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Quản lý tin đăng"/>
        </androidx.appcompat.widget.Toolbar>
        <GridLayout
            android:visibility="gone"
            android:id="@+id/gridRequireLoginForPost"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vui lòng đăng nhập để thực hiện chức năng này"
                    android:textSize="16dp"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_marginTop="5dp"
                    android:layout_width="200dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Đăng nhập/ Đăng ký"
                    android:textColor="@color/white"
                    android:backgroundTint="#F09D38"/>
            </LinearLayout>

        </GridLayout>
        <LinearLayout
            android:visibility="visible"
            android:id="@+id/layoutLoginedForPost"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F5F5F5">
            <com.google.android.material.bottomnavigation.BottomNavigationView
                app:elevation="0dp"
                android:id="@+id/navPost"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/white_shape_bottom_border"
                android:paddingBottom="5dp"
                android:elevation="0dp"
                app:itemIconTint="@drawable/bottom_navigation_colors"
                app:itemTextColor="@drawable/bottom_navigation_colors"
                app:itemTextAppearanceActive="@style/SellNavigationTextAppearance"
                app:itemTextAppearanceInactive="@style/SellNavigationTextAppearance"
                app:menu="@menu/post_menu"/>
            <androidx.viewpager2.widget.ViewPager2
                android:layout_marginTop="-10dp"
                android:id="@+id/viewPagerPost"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabNewPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/new_post"
            android:contentDescription="Đăng bài"
            app:borderWidth="0dp"
            android:backgroundTint="#F5BD40"
            android:layout_margin="20dp"
            app:fabCustomSize="80dp"
            app:maxImageSize="60dp"/>
    </RelativeLayout>
</FrameLayout>