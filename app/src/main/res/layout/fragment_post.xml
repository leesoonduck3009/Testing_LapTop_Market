<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.PostFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F5BD40">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Quản lý tin đăng"/>
        </androidx.appcompat.widget.Toolbar>
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navPost"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/white_square"
            android:paddingBottom="5dp"
            android:elevation="0dp"
            app:itemIconTint="@drawable/bottom_navigation_colors"
            app:itemTextColor="@drawable/bottom_navigation_colors"
            app:itemTextAppearanceActive="@style/SellNavigationTextAppearance"
            app:itemTextAppearanceInactive="@style/SellNavigationTextAppearance"
            app:menu="@menu/post_menu"/>
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPagerPost"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabNewPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/new_post"
            android:contentDescription="Đăng bài"
            app:borderWidth="0dp"
            android:backgroundTint="#F5BD40"
            android:layout_margin="20dp"
            app:fabCustomSize="80dp"
            app:maxImageSize="60dp"/>
    </RelativeLayout>
</FrameLayout>