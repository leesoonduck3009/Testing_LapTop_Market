<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewPostActivity"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F5BD40">
        <LinearLayout
            android:id="@+id/layoutNewPostToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnNewPostClose"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="-10dp"
                android:background="@drawable/ic_close"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="-50dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Đăng tin"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="#E4E4E4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:text="THÔNG TIN CHI TIẾT"
                    android:textSize="16dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/upload_image"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    >
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:paddingLeft="15dp"
                        android:hint="Tình trạng"
                        android:textSize="16dp"
                        android:clickable="true"
                        android:focusable="false"
                        android:background="@drawable/outline_combobox" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_drop_down" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    >
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:paddingLeft="15dp"
                        android:hint="Hãng"
                        android:textSize="16dp"
                        android:clickable="true"
                        android:focusable="false"
                        android:background="@drawable/outline_combobox" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_drop_down" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    >
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:paddingLeft="15dp"
                        android:hint="Bộ xử lý"
                        android:textSize="16dp"
                        android:clickable="true"
                        android:focusable="false"
                        android:background="@drawable/outline_combobox" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_drop_down" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    >
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:paddingLeft="15dp"
                        android:hint="RAM"
                        android:textSize="16dp"
                        android:clickable="true"
                        android:focusable="false"
                        android:background="@drawable/outline_combobox" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_drop_down" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    >
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:paddingLeft="15dp"
                        android:hint="Loại ổ cứng"
                        android:textSize="16dp"
                        android:clickable="true"
                        android:focusable="false"
                        android:background="@drawable/outline_combobox" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_drop_down" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    >
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:paddingLeft="15dp"
                        android:hint="Dung lượng ổ cứng"
                        android:textSize="16dp"
                        android:clickable="true"
                        android:focusable="false"
                        android:background="@drawable/outline_combobox" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_drop_down" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    >
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:paddingLeft="15dp"
                        android:hint="Card màn hình"
                        android:textSize="16dp"
                        android:clickable="true"
                        android:focusable="false"
                        android:background="@drawable/outline_combobox" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_drop_down" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    >
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:paddingLeft="15dp"
                        android:hint="Kích cỡ màn hình"
                        android:textSize="16dp"
                        android:clickable="true"
                        android:focusable="false"
                        android:background="@drawable/outline_combobox" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_drop_down" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    >
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:paddingLeft="15dp"
                        android:hint="Bảo hành"
                        android:textSize="16dp"
                        android:clickable="true"
                        android:focusable="false"
                        android:background="@drawable/outline_combobox" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_drop_down" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    >
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:paddingLeft="15dp"
                        android:hint="Xuất xứ"
                        android:textSize="16dp"
                        android:clickable="true"
                        android:focusable="false"
                        android:background="@drawable/outline_combobox" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_drop_down" />
                </RelativeLayout>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:hint="Giá bán"
                    android:textSize="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/outline_combobox" />
            </LinearLayout>
            <LinearLayout
                android:background="#E4E4E4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:text="TIÊU ĐỀ ĐĂNG VÀ MÔ TẢ CHI TIẾT"
                    android:textSize="16dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:paddingLeft="15dp"
                    android:hint="Tiêu đề tin đăng"
                    android:textSize="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/outline_combobox" />
                <EditText
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:gravity="top"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:hint="Mô tả chi tiết"
                    android:textSize="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/outline_combobox" />
            </LinearLayout>
            <LinearLayout
                android:background="#E4E4E4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:text="THÔNG TIN NGƯỜI BÁN"
                    android:textSize="16dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:paddingLeft="15dp"
                    android:hint="Số điện thoại"
                    android:textSize="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/outline_combobox" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:hint="Họ tên"
                    android:textSize="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/outline_combobox" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:hint="Địa chỉ"
                    android:textSize="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/outline_combobox" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Xem trước"
            android:textSize="16dp"
            android:backgroundTint="#C0C0C0"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="2dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#F09D38"
            android:text="Đăng tin"
            android:textSize="16dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="20dp"
            />
    </LinearLayout>

</LinearLayout>